  END PARSE_SUB_DIST_VALIQ;

  FUNCTION PARSE_STREET_SUBURB_FROM_VALIQ(p1 Clob) RETURN Clob IS
      -- Function logic goes here
      -- You can use PL/SQL statements, variables, and other constructs
      pragma autonomous_transaction;
