TESTS + DEBUG
//======================================//
SET SERVEROUTPUT ON;

declare
    v_rtn varchar2(32000);
begin

v_rtn := COMPONENT_GET_JSON_DATA('{
        "comp_id": 31521,
        "comp_code": "EL",
        "comp_desc": "ENGLOBO",
        "district_code": "1",
        "zone_code": "A",
        "ltt_category": "RES",
        "non_homogenous_ind": "Y",
        "comp_review_date": "2023/12/25 10:12:50",
        "auto_batch_exclude": "",
        "action": "CREATE",
        "action_ts": "2023/12/25 10:12:50",
        "action_by": "AAGLODIYA",
        "properties": [{"propcomp_id":4342746,
        "prop_id":508547},
        {"propcomp_id" : 7533487,
        "prop_id" : 508548}]
    }');
dbms_output.put_line('Return :' || v_rtn);
end;

